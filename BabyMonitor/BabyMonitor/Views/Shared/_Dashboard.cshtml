</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">Baby Monitoring System</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Profile</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="#">Analytics</a></li>
                    <li><a href="#">Export</a></li>
                </ul>
            </div>
            <div class="col-md-3 col-md-offset-1 main">
                <script>
                    var xmlhttp = new XMLHttpRequest();
                    xmlhttp.onreadystatechange = function () {
                        if (this.readyState == 4 && this.status == 200) {
                            var myObj = JSON.parse(JSON.parse(this.responseText));
                            document.getElementById("name").innerHTML = myObj.name;
                            document.getElementById("stat").innerHTML = myObj.weather[0].main;
                            document.getElementById("temp").innerHTML = myObj.main.temp + " F";
                            document.getElementById("humidity").innerHTML = myObj.main.humidity + " %";
                        }
                    };
                    xmlhttp.open("GET", "http://localhost:57973/getWeather", true);
                    //xmlhttp.open("GET", "@Url.Content("~/Content/")json_demo.txt", true);
                    xmlhttp.send();
                </script>
                <h2 class="header">Today's Weather</h2>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td>Location</td>
                                <td id="name"></td>
                            </tr>
                            <tr>
                                <td>Overall</td>
                                <td id="stat"></td>
                            </tr>
                            <tr>
                                <td>Temperature</td>
                                <td id="temp"></td>
                            </tr>
                            <tr>
                                <td>Humidity</td>
                                <td id="humidity"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-7 col-md-offset-0 main">
                <iframe src="~/InfoChart.aspx" marginwidth="10" scrolling="no" Width="880px" Height="280px" style="border:1px solid black"></iframe>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
