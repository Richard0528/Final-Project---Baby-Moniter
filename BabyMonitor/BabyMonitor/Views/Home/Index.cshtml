<script>
    function loadWeather() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("name").innerHTML = this.responseText;
            }
        };
        xhttp.open("GET", "http://localhost:57973/getWeather", true);
        xhttp.send();
    }
</script>

<script>
    function load() {
        var xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var myObj = JSON.parse(JSON.parse(this.responseText));
                document.getElementById("demo").innerHTML = myObj.name;
            }
        };
        xmlhttp.open("GET", "http://localhost:57973/getWeather", true);
        //xmlhttp.open("GET", "@Url.Content("~/Content/")json_demo.txt", true);
        xmlhttp.send();
    }
</script>